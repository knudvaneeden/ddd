/************************************************************************
  "Continuoue WrapPara()" global variables and key definitions.
 ************************************************************************/

// Global variables

integer ContWrap = 0        // Is Continuous Wrap Active (1 == yes)
integer OldAutoIndent = 0   // Save area for old AutoIndent setting

keydef ContWrapKeys
    <Alt F5>                mRollLeft()
    <Alt F6>                mRollRight()
    <Alt GreyEnd>           mEndWindow() mEndLine()
    <Alt GreyHome>          mBegWindow() mBegLine()
    <Alt GreyPgDn>          mPageDown() NextFile() mPageDown() NextFile()
    <Alt GreyPgUp>          mPageUp() NextFile() mPageUp() NextFile()
    <Alt c>                 mCopyBlock(_DEFAULT_)
    <Alt f>                 mSaveAndQuitFile()
    <Alt t>                 mCopyBlock(_OVERWRITE_)
    <Alt y>                 mSaveAllFiles()
    <CenterCursor>          mBegWindow() mBegLine()
    <Ctrl CenterCursor>     mEndWindow() mEndLine()
    <Ctrl CursorDown>       mRollDown()
    <Ctrl CursorLeft>       mWordLeft()
    <Ctrl CursorRight>      mWordRight()
    <Ctrl CursorUp>         mRollUp()
    <Ctrl End>              mEndWindow()
    <Ctrl Grey*>            mPaste(_OVERWRITE_)
    <Ctrl Grey->            mCut(_APPEND_)
    <Ctrl GreyCursorDown>   mRollDown()
    <Ctrl GreyCursorLeft>   mWordLeft()
    <Ctrl GreyCursorRight>  mWordRight()
    <Ctrl GreyCursorUp>     mRollUp()
    <Ctrl Home>             mBegWindow()
    <Ctrl PgDn>             mEndFile()
    <Ctrl PgUp>             mBegFile()
    <Ctrl PrtSc>            mPaste(_OVERWRITE_)
    <Ctrl k><c>             mCopyBlock(_DEFAULT_)
    <Ctrl k><s>             mSaveFile()
    <Ctrl k><w>             mSaveBlock("", _DEFAULT_)
    <Ctrl k><x>             mSaveAndQuitFile()
    <Ctrl q><c>             mEndFile()
    <Ctrl q><d>             mEndLine()
    <Ctrl q><r>             mBegFile()
    <Ctrl q><s>             mBegLine()
    <Ctrl w>                mScrollUp()
    <Ctrl z>                mScrollDown()
    <CursorDown>            mDown()
    <CursorLeft>            mLeft()
    <CursorRight>           mRight()
    <CursorUp>              mUp()
    <End>                   mEndLine()
    <Grey*>                 mPaste(_DEFAULT_)
    <Grey->                 mCut(_DEFAULT_)
    <Home>                  mBegLine()
    <PgDn>                  mPageDown()
    <PgUp>                  mPageUp()
    <Shift Tab>             mTabLeft()
    <SpaceBar>              mSpace()
    <Tab>                   mTabRight()
end
