integer proc ExecDialog( string command )
    integer rc, msg
    string name[255] = GetToken(command," ",1)

    rc = isMacroLoaded(name)
    if not rc
        msg = Set(MsgLevel,_NONE_)
        rc = LoadMacro(name)
        Set(MsgLevel,msg)
    endif
    if rc
        rc = ExecMacro(command)
    endif
    if not rc
        Set(MacroCmdLine,"0")
        Warn("Cannot execute dialog macro: ",name,".")
    endif
    return (rc)
end

